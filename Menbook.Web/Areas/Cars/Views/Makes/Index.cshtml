@model CarMakeListingViewModel
@{
    ViewData["Title"] = "Makes";
}
<br />

    <form asp-action="Search" class="navbar-form text-center" role="search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Make ..." name="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>


<nav aria-label="Page navigation example" class="text-center">
    <ul class="pagination">
        <li class="page-item"><a asp-route-page="@Model.PreviousPage" class="page-link">Previous</a></li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            var activePage = Model.CurrentPage == i ? "active" : string.Empty;
            <li class="page-item @activePage"><a asp-route-page="@i" class="page-link"> @i </a></li>
        }
        <li class="page-item"><a asp-route-page="@Model.NextPage" class="page-link">Next</a></li>
    </ul>
</nav>
@foreach (var car in Model.Cars)
{
    <div class="col-md-6">
        <div class="panel panel-default panel-front">
            <div class="panel-heading">
                <h4 class="panel-title"><a asp-controller="Models" asp-action="Index" asp-route-id="@car.Id"><img style='width: 100%;' src="@car.ImageUrl" height="250"></a></h4>
            </div>
            <div class="panel-body">
                <h2 class="text-center">@car.Name</h2>
                <div class="text-right">
                    <a asp-controller="Models" asp-action="Index" asp-route-id="@car.Id" class="btn btn-primary form-control" role="button">View All Models</a>
                </div>
            </div>
        </div>
    </div>
}

<br />
<div class="row col-md-12">
    <nav aria-label="Page navigation example" class="text-center">
        <ul class="pagination">
            <li class="page-item"><a asp-route-page="@Model.PreviousPage" class="page-link">Previous</a></li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                var activePage = Model.CurrentPage == i ? "active" : string.Empty;
                <li class="page-item @activePage"><a asp-route-page="@i" class="page-link"> @i </a></li>
            }
            <li class="page-item"><a asp-route-page="@Model.NextPage" class="page-link">Next</a></li>
        </ul>
    </nav>
</div>



