@model CalculateFormViewModel
@{
    ViewData["Title"] = "Index";
}

<br />

<div class="row">
    <div class="col-md-6 col-md-offset-2" style="background-image:url('https://fthmb.tqn.com/mm0XORjQpYtckiap7AQsuklUkJM=/768x0/filters:no_upscale()/homer_2008_v2F_hires2-56a00fd43df78cafda9fde98.jpg');background-size:cover; height:500px;width:750px;">
        <section>
            <form asp-controller="Calculator" asp-action="Result">
                <div class="row">
                    <br />
                    <div class="col-md-12" style="height:430px">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Age"></label>
                                <input asp-for="Age" placeholder="Name" class="form-control" />
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Weight"></label>
                                <input asp-for="Weight " placeholder="Country" class="form-control" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BeerId"></label>
                                <select asp-for="BeerId" asp-items="@Model.BeerNames" class="form-control"></select>
                                <span asp-validation-for="BeerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TotalDrinks"></label>
                                <input asp-for="TotalDrinks" placeholder="Name" min="1" max="20" class="form-control" />
                                <span asp-validation-for="TotalDrinks" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HoursDrinking"></label>
                                <input asp-for="HoursDrinking" type="number" step="0.5" min="0.5" max="10" placeholder="Country" class="form-control" />
                                <span asp-validation-for="HoursDrinking" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary">Calculate</button>
                </div>
            </form>
        </section>
    </div>
</div>
<br />

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}