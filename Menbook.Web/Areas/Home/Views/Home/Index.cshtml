
@{
    ViewData["Title"] = "Index";
}

<link href="~/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/css/simple-line-icons.css" rel="stylesheet" />
<link href="~/css/landing-page.min.css" rel="stylesheet" />
<br />
<header class="masthead text-white text-center">
    <div class="overlay" style="background:url('http://i160.photobucket.com/albums/t162/hotlyts24/fb-covers/megan-fox/megan-fox-cover-4.png');background-repeat: no-repeat; background-size:cover;opacity:0.7"></div>
    <div style="position: absolute; z-index: -1; top: 0px; left: 0px; bottom: 0px; right: 0px; overflow: hidden; background-size: cover; background-color: transparent; background-repeat: no-repeat; background-position: 50% 50%; background-image: none;"><video autoplay="" loop="" muted="" style="margin: auto; position: absolute; z-index: -1; top: 50%; left: 50%; transform: translate(-50%, -50%); visibility: visible; opacity: 1; width: 100%; height: auto;"><source src="~/mp4/bg3.mp4" type="video/mp4"></video></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto text-left">
                <h1 class="mb-5 col-md-offset-1">Welcome to Menbook</h1>
            </div>
        </div>
    </div>
</header>
<!-- Icons Grid -->
<div class="container text-center">
    <section class="features-icons bg-light text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-4">
                        <div class="features-icons-icon d-flex">
                            <i class="m-auto text-primary">Cars</i>
                        </div>
                        <h3>Pick your favourite car</h3>
                        <p class="lead mb-0">
                            <em>
                                “When a man opens a car door for his wife, it's either a new car or a new wife.“
                            </em>
                        </p>
                        <a asp-area="Cars" class="btn btn-primary form-control">Drive</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-4">
                        <div class="features-icons-icon d-flex">
                            <i class="m-auto text-primary">Blog</i>
                        </div>
                        <h3>Write some articles</h3>
                        <p class="lead mb-0">
                            <em>
                                “Put your blog out into the world and hope that your talent will speak for itself.“
                            </em>
                        </p>
                        <a asp-area="Blog" asp-controller="Articles" class="btn btn-primary form-control">Post</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-4">
                        <div class="features-icons-icon d-flex">
                            <i class="m-auto text-primary">Beers</i>
                        </div>
                        <h3>Join our Beer Fest</h3>
                        <p class="lead mb-0">
                            <em>“Everyone needs to believe in something. I believe I'll have another beer.“</em>
                        </p>
                        <a asp-area="Beers" asp-controller="Home" asp-action="Index" class="btn btn-primary form-control">Drink</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Image Showcases -->

