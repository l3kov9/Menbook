@model string[]
@{
    Layout = "";
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Menbook</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/coming-soon.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div style="position: absolute; z-index: -1; top: 0px; left: 0px; bottom: 0px; right: 0px; overflow: hidden; background-size: cover; background-color: transparent; background-repeat: no-repeat; background-position: 50% 50%; background-image: none;"><video autoplay="" loop="" muted="" style="margin: auto; position: absolute; z-index: -1; top: 50%; left: 50%; transform: translate(-50%, -50%); visibility: visible; opacity: 1; width: 100%; height: auto;"><source src="~/mp4/bg.mp4" type="video/mp4"></video></div>

    <div class="overlay"></div>

    <div class="masthead">
        <div class="masthead-bg"></div>
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-12 my-auto">
                    <div class="masthead-content text-white py-5 py-md-0">
                        <div class="text-center"><img src="~/images/logos/men-book-beers.png" /></div>
                        <h2 class="mb-3 text-center text-uppercase text-warning">Welcome to <strong>Menbook</strong>!</h2>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <p class="mb-5">
                                Happy to see you again, @User.Identity.Name!
                                <br />
                                Enjoy your stay!
                            </p>

                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                                <ul class="nav navbar-nav navbar-right">
                                    <li>
                                        <a asp-area="Home" class="btn btn-success col-md-4">Main Menu</a>
                                        <a asp-area="" asp-controller="Manage" asp-action="Profile" class="btn btn-primary col-md-4">My Profile</a>
                                        <button type="submit" class="btn btn-danger navbar-btn navbar-link col-md-3">Logout</button>

                                    </li>
                                </ul>
                            </form>
                        }
                        else
                        {
                            <p class="mb-5 text-right">
                                Join our site for free <strong>Now</strong>!
                            </p>
                            <p class="text-center">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-success col-md-4">Login</a>
                                <a asp-controller="Account" asp-action="Register" class="btn btn-success col-md-4">Register</a>
                                <a asp-area="Home" asp-controller="Home" asp-action="Index" class="btn btn-info col-md-3">Guest</a><br /><br />
                            </p>

                            <p class="text-center">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-social btn-facebook">
                                    <span class="fa fa-facebook-square"></span> Sign in with Facebook
                                </a>
                                <a asp-controller="Account" asp-action="Login" class="btn btn-danger btn-social btn-google">
                                    <span class="fa fa-google"></span> Sign in with Google
                                </a>
                            </p>
                            <br />
                            @: <span class="text-right"><em>P.S. bg-mama.com and vegans not allowed.</em></span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="social-icons">
        <ul class="list-unstyled text-center mb-0">
            <li class="list-unstyled-item">
                <a asp-controller="Account" asp-action="Login" style="padding:15px">
                    <i class="fa fa-facebook-square" style="font-size:36px"></i>
                </a>
            </li>
            <li class="list-unstyled-item">
                <a asp-controller="Account" asp-action="Login" style="padding:15px">
                    <i class="fa fa-google" style="font-size:36px"></i>
                </a>
            </li>
            <li class="list-unstyled-item">
                <a asp-controller="Account" asp-action="Login" style="padding:15px">
                    <i class="fa fa-twitter" style="font-size:36px"></i>
                </a>
            </li>
        </ul>
    </div>
    <div class="social-icons text-right">
        <ul>
            <li> <h3 style="color:greenyellow; padding-left:50%;padding-right:10%">@Model[0]</h3></li>
            <li><h5 style="padding-right:10%"><em>@Model[1]</em></h5></li>
        </ul>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.vide.min.js"></script>
    <script src="~/js/coming-soon.min.js"></script>
</body>
</html>
